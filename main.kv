#:import FadeTransition kivy.uix.screenmanager.FadeTransition
ScreenManagement:
    transition: FadeTransition()
    WelcomeScreen:
        id: welcome
    MainScreen:
    MotorScreen:
    SpeechScreen:
    ImageScreen:
    BasicEvalScreen:


<WelcomeScreen>:
    name: 'welcome'
    id: 'welcome'
    BoxLayout:
        orientation: 'vertical'
        id: box
        AsyncImage:
            id: img1
            source: 'obj/logo.png'
            height: '100'
            size_hint: (1, 0.2)

        FillAbleTextInput:
            id: name
            hint_text: "Name"
            on_parent: self.set_values_from_config()
            size_hint: (1, 0.1)

        FillAbleTextInput:
            id: lastname
            hint_text: "LastName"
            on_parent: self.set_values_from_config()
            size_hint: (1, 0.1)

        FillAbleTextInput:
            id: emergency
            hint_text: "Emergency"
            on_parent: self.set_values_from_config()
            size_hint: (1, 0.1)

        FillAbleTextInput:
            id: age
            hint_text: "Age"
            on_parent: self.set_values_from_config()
            size_hint: (1, 0.1)


        Button:
            on_release: app.create_configuration()
            text: 'Save Values'
            font_size: 30
            id: save_btn
            size_hint: (1, 0.1)

        Button:
            on_release: app.root.current = 'main'
            text: 'Start DeStroke'
            font_size: 30
            id: main_btn
            size_hint: (1, 0.1)


<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: 'vertical'
        AsyncImage:
            id: img1
            source: 'obj/logo.png'
            height: '100'
            size_hint: (1, 0.2)

        Button:
            on_release: app.root.current = 'motor'
            text: 'Motor Analysis'
            font_size: 50
            size_hint: (1, 0.2)

        Button:
            on_release: app.root.current = 'speech'
            text: 'Speech Analysis'
            font_size: 50
            size_hint: (1, 0.2)

        Button:
            on_release: app.root.current = 'image'
            text: 'Photo Analysis'
            font_size: 50
            size_hint: (1, 0.2)

        Button:
            on_release: app.root.current = 'basic_evaluation'
            text: 'Basic Evaluation'
            font_size: 50
            size_hint: (1, 0.2)


<MotorScreen>:
    name: 'motor'

    BoxLayout:
        orientation: 'vertical'

        Label:
            id: x_label
            text: 'X: '

        Label:
            id: y_label
            text: 'Y: '

        Label:
            id: z_label
            text: 'Z: '

        Label:
            id: accel_status
            text: ''

        Label:
            id: result
            text: ''

        BoxLayout:
            size_hint_y: None
            height: '48dp'
            padding: '4dp'

            ToggleButton:
                id: toggle_button
                text: 'Start accelerometer'
                on_press: root.do_toggle()

<SpeechScreen>:
    name: 'speech'
    BoxLayout:
        orientation: 'vertical'

        RecordButton:
            id: record_button
            text: 'Check Speech Function'
            on_release: self.record()
            size_hint: (1, 0.1)

        TextInput:
            text: record_button.output
            readonly: True
            height: '10'
            size_hint: (1, 0.1)


        AsyncImage:
            id: img1
            source: 'obj/blank.jpg'
            height: '100'
            size_hint: (1, 0.8)

<ImageScreen>:
    name: 'image'

    Button:
        on_release: app.root.current = 'main'
        text: 'back to the main screen'
        font_size: 50

<BasicEvalScreen>:
    name: 'basic_evaluation'

    Button:
        on_release: app.root.current = 'main'
        text: 'back to the main screen'
        font_size: 50